---
layout: default
---
<div class="container component">
  <div class="row">

    <div class="col-sm-9 col-xs-12">
      <h1>
        {{title}}
        {{#if component}}
        <a class="btn btn-default" href="{{package.repository.url}}/blob/master/src/{{component}}">View source</a>
        {{/if}}
      </h1>
      {{{body}}}

      <nav class="visible-xs-block">
        <ul class="pager">
          {{#if previousPage}}
            <li class="previous"><a href="{{previousPage.page.destination}}"><span aria-hidden="true">&larr;</span> {{previousPage.title}}</a></li>
          {{/if}}
          {{#if nextPage}}
            <li class="next"><a href="{{nextPage.page.destination}}">{{nextPage.title}} <span aria-hidden="true">&rarr;</span></a></li>
          {{/if}}
        </ul>
      </nav>
    </div>

    <nav class="col-sm-3 hidden-xs">
      <ul class="nav nav-stacked fixed nav-sidebar">
        {{#each groupedPages}}
          <li>
            <h4>{{namespace}}</h4>
            <ul class="nav nav-stacked">
              {{#each items}}
                <li class="{{#if isCurrentPage}}active{{/if}}">
                  <a href="{{page.destination}}">
                    {{title}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </li>
        {{/each}}
      </ul>
    </nav>

  </div>
</div>
